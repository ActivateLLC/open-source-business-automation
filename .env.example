# Open Source Business Automation Stack - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# SHARED DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=change_me_please_use_strong_password

# =============================================================================
# ACTIVEPIECES CONFIGURATION (Lead Management)
# =============================================================================
# Must be exactly 32 characters
ACTIVEPIECES_ENCRYPTION_KEY=change_me_please_use_32_chars!!
ACTIVEPIECES_JWT_SECRET=change_me_please_use_strong_secret

# =============================================================================
# N8N CONFIGURATION (Financial Operations)
# =============================================================================
N8N_ENCRYPTION_KEY=change_me_please_use_strong_encryption_key

# Optional: Enable basic authentication for n8n
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your_secure_password

# =============================================================================
# WINDMILL CONFIGURATION (Content Creation)
# =============================================================================
# Windmill uses DATABASE_URL which is constructed from POSTGRES_PASSWORD

# =============================================================================
# EXTERNAL SERVICE API KEYS (Optional - for integrations)
